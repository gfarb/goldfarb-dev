{
  "cacheDir": "$rootDir/__lwr_cache__",
  "lwc": {
    "modules": [
      {
        "dir": "$rootDir/src/modules"
      },
      {
        "npm": "lightning-base-components"
      }
    ]
  },
  "bundleConfig": {
    "exclude": ["lwc", "@lwc/synthetic-shadow", "lwr/navigation"]
  },
  "moduleProviders": [
    "@lwrjs/label-module-provider",
    "@lwrjs/app-service/moduleProvider",
    "@lwrjs/lwc-module-provider",
    "@lwrjs/npm-module-provider"
  ],
  "assets": [
    {
      "alias": "assetsDir",
      "dir": "$rootDir/src/assets",
      "urlPath": "/assets"
    },
    {
      "alias": "layoutsDir",
      "dir": "$rootDir/src/layouts",
      "urlPath": "/layouts"
    }
  ],
  "routes": [
    {
      "id": "main",
      "path": "/",
      "rootComponent": "main/app",
      "layoutTemplate": "$layoutsDir/index.html",
      "bootstrap": {
        "syntheticShadow": true
      }
    }
  ],
  "errorRoutes": [
    {
      "id": "not_found",
      "status": 404,
      "layoutTemplate": "$layoutsDir/index.html",
      "rootComponent": "custom/error",
      "bootstrap": {
        "syntheticShadow": true
      }
    },
    {
      "id": "server_error",
      "status": 500,
      "layoutTemplate": "$layoutsDir/index.html",
      "rootComponent": "custom/error",
      "bootstrap": {
        "syntheticShadow": true
      }
    }
  ]
}
